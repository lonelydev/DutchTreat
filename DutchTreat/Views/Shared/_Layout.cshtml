<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Dutch Treat : @ViewBag.Title</title>
  <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
  <div class="navbar navbar-inverse">
    <header class="container">
      <div class="navbar-header">
        <div class="navbar-brand">Dutch Treat!</div>
        @* Let us add a little menu button using the following special chars *@
        <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776;</button>
      </div>
      @* hide menu on small screens until the toggle button can actually show it *@
      <div id="menu" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">         
          <li><a asp-controller="App" asp-action="Index">Home</a></li>
          <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
          <li><a asp-controller="App" asp-action="About">About</a></li>
        </ul>
      </div>
    </header>
  </div>
  <section class="container">
    <h2 class="text-center">@ViewBag.Title</h2>
    @RenderBody()
  </section>
  <footer class="container">
    <div class="text-center">Copyright 2018 Dutch Treat LLC</div>
  </footer>
  <!-- javascript generally has stuff that manipulates contents on the website. hence load it towards the end of the page. -->
  <script src="~/lib/jQuery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="~/js/index.js"></script>
  @* scripts section is not required. if one of the pages creates a section called scripts, then put it here in the layout page

  *@
  @RenderSection("scripts", false)
</body>
</html>
